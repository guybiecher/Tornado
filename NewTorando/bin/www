/**
 *  Socket.io code
 */
var io = require('socket.io').listen(server);
var Promise = require('promise')


io.sockets.on('connection', function (socket) {
    socket.on('send_msg', function (data , lang, target) {
        console.log('msg received');
        console.log(target);
        if(target in rooms){
            translateMeesage(data ,lang).then(
                function (value) {
                    console.log(value)
                    rooms[target].emit('new_msg', value);
                }, function (reason) {
                    console.error("Cant translate the message")
                    rooms[target].emit('new_msg', "Cant translate the message")
                }
            )
            console.log('msg sent');
        } else {
            socket.emit('new_msg', target + " is offline, can't send a message");
        }

